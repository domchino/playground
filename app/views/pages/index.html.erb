<% if !user_signed_in? # if the user is NOT signed in, render this %>
    <style>
        body {
            background: linear-gradient( /* somewhat transparent layer of bg image to make it look darker */
                rgba(0,0,0, 0.4),
                rgba(0,0,0, 0.4)
                ), url("/landing_image_1.jpg") no-repeat center center fixed
        
            
            ; /* only display once, cannot scroll past */
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }
        h1 {
            color: white;
            font-weight: bold;
        }
        .container-index {
            margin-right: 15%;
            margin-left: 15%;
        }
        .text {
            color: white;
            font-weight: 400;
            font-size: 125%;
        }
        .log-in {
            float: right;
            width: 300px;
            height: 150px;
            margin-top: 7.5%;
        }
        .sign-up {
            float: right;
            width: 300px;
            height: 250px;
        }
        
    </style>
    
    <div class="container-index row">
        <div class="col-sm-6">
            <h1>Blank</h1>
            <p class="text">
            For any artist in any creative field.
            </p>    
        </div>
        <div class="col-sm-6">
            <div class="log-in panel">
                Log in
            </div>
            
            <div class="sign-up panel">
                Sign Up
            </div>
            
        </div>
            
    </div>
    

<% else # if the user is signed in, render the following %>

    <script>document.location = "/home"</script>

<% end %>